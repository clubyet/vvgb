<!DOCTYPE html>
<html>
	<head>
		<title>OptikServers</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<link rel="shortcut icon" href="https://cdn.discordapp.com/attachments/732699649143472161/870765448424222730/icons8-group-of-fruits-96.png">
		<link rel="icon" href="https://cdn.discordapp.com/attachments/732699649143472161/870765448424222730/icons8-group-of-fruits-96.png">
        <link rel="stylesheet" href="style.css">
        <style>
/* .login { */
  /* position: fixed; */
  /* top: 50%; */
  /* left: 50%; */
  /* transform: translate(-50%, -50%); */
/* } */
body {
    background-color: #181C27;
}
        </style>
	</head>
	<body>
        <!-- <div class="login text-white">
            <h3>Login to OptikServers</h3>
            <br>
            <center><button class="btn btn-primary">Login With Discord</button></center>
        </div> -->
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-5">
                        <div class="login-wrap p-4 p-md-5">
                            <center><h4 id="error" style="color:red;"></h4></center>
                      <div class="icon d-flex align-items-center justify-content-center">
                          <img style="border-radius:50px;" width="90" height="90" src="icon.ico">
                      </div>
                      
                      <h3 class="text-center mb-4">OptikServers</h3>
                            <form action="#" class="login-form">
                                <div class="form-group">
                                    <input type="number" id="input" class="form-control rounded-left" placeholder="Discord ID" required>
                                </div>

                    <div class="form-group">
                        <button type="button" id="button" class="form-control btn btn-primary rounded submit px-3">Login</button>
                    </div>

                  </form>
                </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
	<script src="renderer.js"></script>
    <script>
        const { ipcRenderer } = require("electron")
        document.getElementById("button").onclick = function () {
            var user = document.getElementById("input").value;
            ipcRenderer.invoke("login", user);
        }
        

        ipcRenderer.on('error', function (evt, message) {
            document.getElementById("error").innerHTML = "This user doesn't exist";
        });
    </script>
    
</html>